<div ng-app='app.exampleApp' ng-controller='ExampleCtrl'>
  <form>
    <div class="form-group">
      <label for="url">URL</label>
      <input id="url" class="form-control" type="text" ng-model="ldpath.url" ng-model-options="{ updateOn: 'blur' }" />
    </div>

    <div class="form-group">
      <label for="program">Program</label>
      <textarea id="program" class="form-control" ng-model="ldpath.program" ng-model-options="{  updateOn: 'default blur', debounce: 1000 }"></textarea>
    </div>
  </form>
  
  <hr />
  
  <h1>{{ldpath.url}}</h1>
  <pre>{{response.content}}</pre>
</div>